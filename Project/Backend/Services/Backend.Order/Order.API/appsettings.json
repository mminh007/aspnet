{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Ocelot": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/Order-.log",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 5242880,
          "retainedFileCountLimit": 10,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] ({SourceContext}) {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "Order"
    }
  },

  "StaticFiles": {
    "BaseUrl": "https://localhost:7038",
    "ImageUrl": {
      "PhysicalPath": "D:/aspnet/Project/src",
      "RequestPath": "/aspnet/Project/src"
    }
  },

  "ServiceUrls": {
    "User": {
      "BaseUrl": "https://localhost:7105",
      "Endpoints": {
        "Register": "api/user/register",
        "GetAll": ""
      }
    },
    "Product": {
      "BaseUrl": "https://localhost:7038",
      "Endpoints": {
        "GetProductInfo": "api/buyerproduct/order/prices",
        "ValidateProduct": "api/buyerproduct/order/validate-product?id={productId}"
      }
    },
    "Auth": {
      "BaseUrl": "https://localhost:7272",
      "Endpoints": {
        "GetSystemToken": "api/auth/system-token"
      }
    },

    "Store": {
      "BaseUrl": "https://localhost:7153",
      "Endpoints": {
        "GetStoreInfo": "api/store/get-detail?store_id={storeId}",
        "GetAll": ""
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
