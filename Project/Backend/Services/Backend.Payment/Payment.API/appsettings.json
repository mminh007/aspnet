{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Ocelot": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/Payment-.log",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 5242880,
          "retainedFileCountLimit": 10,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] ({SourceContext}) {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "Payment"
    }
  },
  "ServiceUrls": {
    "User": {
      "BaseUrl": "https://localhost:7105",
      "Endpoints": {
        "Register": "api/user/register",
        "GetAll": ""
      }
    },
    "Product": {
      "BaseUrl": "https://localhost:7038",
      "Endpoints": {
        "GetProductInfo": "api/buyerproduct/order/prices",
        "ValidateProduct": "api/buyerproduct/order/validate-product?id={productId}"
      }
    },
    "Order": {
      "BaseUrl": "https://localhost:7070",
      "Endpoints": {
        "UpdateStatus": "api/order/update-status/{orderId}?status={char}"
      }
    },
    "Auth": {
      "BaseUrl": "https://localhost:7272",
      "Endpoints": {
        "GetSystemToken": "api/auth/system-token"
      }
    }
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "*"
}