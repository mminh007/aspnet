{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Ocelot": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/Store-.log",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 5242880,
          "retainedFileCountLimit": 10,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] ({SourceContext}) {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "Store"
    }
  },
  "StaticFiles": {
    "BaseUrl": "https://localhost:7153",
    "ImageUrl": {
      "PhysicalPath": "D:/aspnet/Project/src",
      "RequestPath": "/aspnet/Project/src"
    }
  },

  "ServiceUrls": {
    "User": {
      "BaseUrl": "https://localhost:7276",
      "Endpoints": {
        "Register": "api/user/register",
        "GetAll": ""
      }
    },
    "Product": {
      "BaseUrl": "https://localhost:7037",
      "Endpoints": {
        // ---------------------------
        // BuyerProductController
        // ---------------------------
        "SearchProducts": "api/buyerproduct/search/store/{storeId}",

        // ---------------------------
        // ProductController
        // ---------------------------

        // Product APIs
        "GetProductById": "api/product/{id}",
        "GetAllProductsByStore": "api/product/store/{storeId}",
        "GetProductsByStoreAndCategory": "api/product/store/{storeId}/category?categoryId={categoryId}",
        "SearchProductsByStore": "api/product/store/{storeId}/search?keyword={keyword}",

        "CreateProduct": "api/product",
        "UpdateProduct": "api/product",
        "DeleteProduct": "api/product/{id}",
        "ChangeProductCategory": "api/product/{id}/category/{newCategoryId}",

        // Category APIs
        "CreateCategory": "api/product/category",
        "SearchCategories": "api/product/category/search?storeId={storeId}"
      }
    }
  },


  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
