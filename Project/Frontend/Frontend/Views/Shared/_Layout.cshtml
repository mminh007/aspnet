@using Frontend.Helpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Frontend</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Frontend.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3 p-3">
            <div class="container">
                <!-- Logo -->
                <a class="navbar-brand fw-bold text-danger" asp-controller="Home" asp-action="Index">Shopeefood</a>

                <!-- Toggle button cho mobile -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar links -->
                <div class="collapse navbar-collapse justify-content-center" id="navbarContent">
                    <ul class="navbar-nav flex-wrap text-center">
                        <li class="nav-item"><a class="nav-link fw-bold text-dark" asp-controller="Home" asp-action="Index">Đồ ăn</a></li>
                        <li class="nav-item"><a class="nav-link fw-bold text-dark" href="#">Thực phẩm</a></li>
                        <li class="nav-item"><a class="nav-link fw-bold text-dark" href="#">Rượu bia</a></li>
                        <li class="nav-item"><a class="nav-link fw-bold text-dark" href="#">Hoa</a></li>
                        <li class="nav-item"><a class="nav-link fw-bold text-dark" href="#">Siêu thị</a></li>
                        <li class="nav-item"><a class="nav-link fw-bold text-dark" href="#">Thuốc</a></li>
                        <li class="nav-item"><a class="nav-link fw-bold text-dark" href="#">Thú cưng</a></li>
                    </ul>
                </div>

                <!-- Cart + Login -->
                <div class="cart-login ms-auto">
                    @await Component.InvokeAsync("Cart", new { userId = AuthHelper.GetUserInfo(Context).userId })
                    <partial name="_loginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <!-- Body -->
    @if (ViewData["Title"]?.ToString() == "Homepage")
    {
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    }
    else
    {
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    }

    <!-- Footer -->
    <footer class="border-top footer text-muted">
        <div class="container text-center py-3">
            &copy; 2025 - Frontend - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
