@using Frontend.Models.Auth
@using Frontend.Models.Auth.Requests
@model RegisterModel

<div class="container d-flex justify-content-center min-vh-100">
    <div class="w-50">
        <h2 class="text-center mb-4">Register</h2>

        <form asp-action="Register" method="post">
            <div class="form-group mb-3">
                <label>Email</label>
                <input asp-for="EmailAddress" class="form-control form-control-sm" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label>Password</label>
                <input asp-for="Password" type="password" class="form-control form-control-sm" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label>Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control form-control-sm" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            @* <div class="form-group mb-3">
                <label>Role</label>
                <select asp-for="Role" class="form-select form-select-sm">
                    <option value="">-- role --</option>
                    <option value="buyer">Buyer</option>
                    <option value="seller">Seller</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div> *@

            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>

            @if (ViewBag.Error != null)
            {
                <p class="text-danger text-center">@ViewBag.Error</p>
            }
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
