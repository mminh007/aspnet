{
  
  "ConnectionStrings": {
    "Redis": "localhost:6379"
  },


  "Ocelot": {
    "BaseUrl": "https://localhost:7048"
  },

  "ServiceUrls": {
    "Auth": {
      "Endpoints": {
        "Login": "auth/login",
        "Register": "auth/register",
        "Refresh": "auth/refresh"
      }
    },
    "Store": {
      "Endpoints": {
        "GetAllStore": "store/all?page={page}&pageSize={pageSize}",
        "GetStoreDetail": "store/public?store={storeId}"
      }
    },
    "Product": {
      "Endpoints": {
        "GetByStore": "buyerproduct/search/store?store={storeId}",
        "SearchCategories": "buyerproduct/search/categories?store={storeId}"
      }
    },
    "Order": {
      "Endpoints": {
        "GetCart": "cart/get-cart?buyer={userId}",
        "GetCountingItems": "cart/counting-item?buyer={userId}",
        "AddItemsToCart": "cart/add-item?buyer={userId}",
        "UpdateItemQuantity": "cart/update-item?buyer={userId}&item={cartItemId}",
        "RemoveItem": "cart/delete-item?buyer={userId}&item={productId}",
        "ClearCart": "cart/delete-cart?buyer={userId}"
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
