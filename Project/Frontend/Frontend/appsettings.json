{
  
  "ConnectionStrings": {
    "Redis": "localhost:6379"
  },


  "Ocelot": {
    "BaseUrl": "https://localhost:7048"
  },

  "ServiceUrls": {
    "Store": {
      "Endpoints": {
        "GetAllStore": "store/all?page={page}&pageSize={pageSize}",
        "GetStoreDetail": "store/public?store={storeId}"
      }
    },
    "Product": {
      "Endpoints": {
        "GetByStore": "buyerproduct/search/store?store={storeId}",
        "SearchCategories": "buyerproduct/search/categories?store={storeId}"
      }
    },
    "Order": {
      "Endpoints": {
        "GetCart": "cart/{userId}",
        "GetCountingItems": "cart/counting-items/{userId}",
        "AddItemsToCart": "cart/add-items?buyer={userId}&cart={cartId}"
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
