{
  "Ocelot": {
    "BaseUrl": "https://localhost:7048"
  },

  "ServiceUrls": {
    "Store": {
      "Endpoints": {
        "GetAllStore": "store/all",
        "GetStoreDetail": "store/detail/buyer/{storeId}"
      }
    },
    "Product": {
      "Endpoints": {
        "GetById": "product/search/{id}",
        "GetByStore": "product/search/store/{storeId}",
        "SearchCategories": "product/category/store/{storeId}"
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
    }
