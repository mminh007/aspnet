{
  "Ocelot": {
    "BaseUrl": "https://localhost:7048"
  },

  "ServiceUrls": {
    "Store": {
      "Endpoints": {
        "Create": "store",
        "GetByUserId": "store/user/{userId}",
        "GetById": "store/detail/{storeId}",
        "Update": "store/{storeId}",
        "Delete": "store/{userId}",
        "ChangeActive": "store/change-active"
      }
    },

    "Product": {
      "Endpoints": {
        "GetById": "product/search/{id}",
        "GetByStore": "product/search/store/{storeId}",
        "GetByStoreAndCategory": "product/search/store/{storeId}/category/{categoryId}",
        "SearchByStore": "product/search/store/{storeId}/search",
        "Create": "product",
        "Update": "product/{productId}",
        "Delete": "product/{id}",

        "CreateCategory": "product/category",
        "SearchCategories": "product/category/store/{storeId}",

        "BuyerSearchByStore": "buyerproduct/search/store/{storeId}"
      }
    }
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "*"

}
